{% for server in owasp_nginx_metrics_endpoints %}
server {
     server_name {{ server.name }};
     
     listen {{ server.public_port }} ssl;
     ssl_certificate /etc/letsencrypt/live/{{ owasp_accessed_host_name }}/fullchain.pem;
     ssl_certificate_key /etc/letsencrypt/live/{{ owasp_accessed_host_name }}/privkey.pem;
     access_log  /var/log/nginx/nodeexporter.access.log;
     location /metrics {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;
        proxy_redirect off;

        auth_basic      "secured site tools";
        auth_basic_user_file /etc/nginx/.htpasswd;
        proxy_pass http://host.docker.internal:{{ server.private_port }}/metrics;
    }
    location / {
         deny all;
         return 404;
	}
}
{% endfor %}
