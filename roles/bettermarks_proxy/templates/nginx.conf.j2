server{
  listen 8080;
  location / {
    # Hide original header first.
    proxy_hide_header 'Access-Control-Allow-Origin';
    # Re-add the header with calling origin.
    add_header 'Access-Control-Allow-Origin' $http_origin;
    {% if allow_cross_origin_credentials -%}
    proxy_hide_header 'Access-Control-Allow-Credentials';
    add_header 'Access-Control-Allow-Credentials' true;
    {% endif %}
    # Proxy to the origin
    proxy_pass https://{{ bettermarks_subdomain }}.{{ bettermarks_domain }};
    proxy_ssl_server_name on;
    proxy_intercept_errors off;
    # Override the cookie domain (previously only for school and apm)
    proxy_cookie_domain .{{ bettermarks_domain }} .{{ bettermarks_proxy_maindomain }};
    # Turn off gzip so that we can perform regex replacement
    proxy_set_header Accept-Encoding "";
    # Replace all subdomains
    {% for instance in bettermarks_proxy_enabled_instances -%}
    sub_filter {{ bettermarks_subdomains[instance] }}.{{ bettermarks_domain }} {{ bettermarks_proxy_subdomains[instance] }}.{{ bettermarks_proxy_maindomain }};
    {% endfor -%}
    # For safety replace the domain in other cases as well
    sub_filter .{{ bettermarks_domain }} .{{ bettermarks_proxy_maindomain }};
    sub_filter_once off;
    sub_filter_types application/json  text/javascript;
  }
}