# https://github.com/privacyidea/privacyidea/blob/master/deploy/nginx/sites-available/privacyidea
server {
    listen 443 ssl;
    server_name privacyidea.infra.dev.spsh.dbildungsplattform.de;

    # ssl certificat are created manually 
    ssl_certificate /etc/letsencrypt/live/privacyidea.infra.dev.spsh.dbildungsplattform.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/privacyidea.infra.dev.spsh.dbildungsplattform.de/privkey.pem;


    location / {
        include uwsgi_params;
        uwsgi_pass unix:/run/uwsgi/app/privacyidea/privacyidea.socket;
    }

    location /static {
        alias /etc/privacyidea/static;
    }
}